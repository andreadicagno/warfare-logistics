{
  "name": "supply-line",
  "version": "0.1.0",
  "type": "module",
  "description": "A logistics strategy game set in World War 2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "biome check src/ && tsc --noEmit && vitest run --coverage",
    "prepare": "lefthook install"
  },
  "keywords": ["game", "strategy", "logistics", "ww2", "wargame"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pixi.js": "^8.16.0",
    "simplex-noise": "^4.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "lefthook": "^2.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
